# Base: TimescaleDB (TSL included) for PostgreSQL 15
FROM timescale/timescaledb:2.21.3-pg15

# Install PostGIS for PostgreSQL 15
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
      postgresql-15-postgis-3 postgresql-15-postgis-3-scripts && \
    rm -rf /var/lib/apt/lists/*

# (Optional) Quiet down logs a bit
ENV PGOPTIONS="-c client_min_messages=notice"
